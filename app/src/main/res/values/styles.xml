<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:buttonStyle">@style/AppButton</item>
        <item name="buttonStyle">@style/AppButton</item>
    </style>

    <style name="AppButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
    </style>

    <style name="AppTextView" parent="android:Widget.TextView" />

    <style name="AppTextView.ListErrorMessage">
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTextView.Header">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

</resources>
